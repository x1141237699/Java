<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.startingNovel.mapper.secondaryReviewMapper">
    <update id="setSecondaryReview">
        insert into secondaryreview_ values (${bookReviewId},'${content}')
    </update>

    <select id="getSecondaryReviewByBookReviewId" resultType="com.example.startingNovel.pojo.secondaryReview">
        select * from secondaryreview_ where bookReviewId = ${bookReviewId}
    </select>

    <select id="getAllSecondaryReview" resultType="com.example.startingNovel.pojo.secondaryReview">
        select * from secondaryreview_
    </select>
</mapper>