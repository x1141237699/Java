<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.startingNovel.mapper.authorMapper">

    <update id="setAuthor">
        insert into author_ values (default,'${authorName}',null)
    </update>

    <select id="getAuthorByAuthorId" resultType="com.example.startingNovel.pojo.author">
        select * from author_ where authorId = ${authorId}
    </select>

    <select id="getAuthorByAuthorName" resultType="com.example.startingNovel.pojo.author">
        select * from author_ where authorName = '${authorName}'
    </select>

    <select id="getAllAuthor" resultType="com.example.startingNovel.pojo.author">
        select * from author_
    </select>

</mapper>