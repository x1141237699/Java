<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.startingNovel.mapper.userMapper">
    <update id="setUser">
        insert into user_ values ('${userName}',${userAccount},${userPassword});
    </update>

    <update id="changeUserName">
        update user_ set userName = '${userName}' where userAccount = ${userAccount}
    </update>

    <select id="getUserByUserAccount" resultType="com.example.startingNovel.pojo.user">
        select * from user_ where userAccount = ${userAccount}
    </select>

    <select id="getUserByUserName" resultType="com.example.startingNovel.pojo.user">
        select * from user_ where userName = '${userName}'
    </select>

    <select id="getAllUser" resultType="com.example.startingNovel.pojo.user">
        select * from user_
    </select>
</mapper>