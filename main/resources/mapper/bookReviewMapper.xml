<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.startingNovel.mapper.bookReviewMapper">
    <update id="setBookReview">
        insert into bookreview_ values (${bookId},'${content}')
    </update>

    <select id="getBookReviewByBookId" resultType="com.example.startingNovel.pojo.bookReview">
        select * from bookreview_ where bookId = ${bookId}
    </select>

    <select id="getAllBookReview" resultType="com.example.startingNovel.pojo.bookReview">
        select * from bookreview_
    </select>

</mapper>